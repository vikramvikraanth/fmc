<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@null</item>

    </style>

    <style name="TextViewCustomFont_light">
        <item name="fontPath">@string/app_font_light</item>
    </style>
    <style name="TextViewCustomFont_medium">
        <item name="fontPath">@string/app_font</item>
    </style>
    <style name="TextViewCustomFont_bold">
        <item name="fontPath">@string/app_font_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="My.TextInputLayout.FilledBox.Padding" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/MyThemeOverlayFilledPadding</item>
    </style>

    <style name="MyThemeOverlayFilledPadding">
        <item name="editTextStyle">@style/MyTextInputEditText_filledBox_padding</item>
    </style>

    <style name="MyTextInputEditText_filledBox_padding" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <!-- left and right padding -->
        <item name="android:paddingStart">@dimen/_2sdp</item>
        <item name="android:paddingEnd">@dimen/_2sdp</item>
        <item name="android:paddingLeft">@dimen/_2sdp</item>
        <item name="android:paddingRight">@dimen/_2sdp</item>

        <!-- top and bottom padding -->
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>
