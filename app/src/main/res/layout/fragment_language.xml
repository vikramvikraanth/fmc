<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="adapter"
                type="com.kotlintest.app.view.adapter.LanguageAdapter" />

    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/White"
            tools:context=".view.fragment.LanguageFragment">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:text="@string/choose"
                    android:textAppearance="@style/TextViewCustomFont_bold"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_20sdp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:text="@string/your_language"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_20sdp" />
            <androidx.recyclerview.widget.RecyclerView
                    load_allLead="@{adapter}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/language_adapter" />

        </LinearLayout>

        <RelativeLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_height="@dimen/_150sdp">
            <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_curve"
                    android:scaleType="centerCrop"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:src="@drawable/ic_logos"
                    android:padding="@dimen/_25sdp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:layout_height="@dimen/_80sdp"/>


        </RelativeLayout>

    </FrameLayout>
</layout>