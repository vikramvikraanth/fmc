<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:textSize="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="12/3/2021"
                        android:textColor="@color/Black"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="match_parent"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:text="Open"
                        android:gravity="end"
                        android:padding="@dimen/_2sdp"
                        android:textColor="@color/greencolor"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:text="@string/complaint_type"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_complaint_type"
                        android:textColor="@color/light_black"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="match_parent"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:text="Slow in progress"
                        android:padding="@dimen/_2sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/light_black"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:text="@string/subject"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_subject"
                        android:textColor="@color/light_black"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="match_parent"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:text="Slow in progress"
                        android:padding="@dimen/_2sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/light_black"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:text="@string/reference_number"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_subject"
                        android:textColor="@color/light_black"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_width="match_parent"
                        android:textSize="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:text="250012130UAE"
                        android:padding="@dimen/_2sdp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/light_black"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:text="@string/view"
                    android:textAllCaps="false"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/_5sdp"
                    app:backgroundTint="@color/greens"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>