<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="data"
                type="com.kotlintest.app.model.responseModel.BenefitiesModel.IPDeduction" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="0.8"
                android:padding="@dimen/_2sdp"
                android:gravity="center"
                android:text="@{data.deductableType}"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:padding="@dimen/_2sdp"
                android:text="@{data.deductablePer}"
                android:gravity="center"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:padding="@dimen/_2sdp"
                android:gravity="center"
                android:text="@{data.deductableFlat}"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="match_parent"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="@{data.deductableRemarks}"
                android:textColor="@color/Black"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>