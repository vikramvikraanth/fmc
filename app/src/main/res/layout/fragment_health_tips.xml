<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:vikram="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="adapter"
                type="com.kotlintest.app.view.adapter.FaqListAdapter" />

    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:background="@color/White"
            android:clickable="true"
            tools:context=".view.fragment.faq.FAQFragment">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/faq_list_adapter"
                load_allLead="@{adapter}"
                android:orientation="vertical"
                vikram:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


    </FrameLayout>
</layout>