<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:vikram="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="adapter"
                type="com.kotlintest.app.view.adapter.FaqListAdapter" />

    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:background="@color/White"
            android:clickable="true"
            tools:context=".view.fragment.faq.FAQFragment">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        load_allLead="@{adapter}"
                        android:nestedScrollingEnabled="false"
                        vikram:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_height="match_parent"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_height="@dimen/_150sdp">
            <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_curve"
                    android:scaleType="centerCrop"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:src="@drawable/ic_logos"
                    android:padding="@dimen/_25sdp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:layout_height="@dimen/_80sdp"/>


        </RelativeLayout>

    </FrameLayout>
</layout>